<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.home.HomeFragment"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/home_top_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:fontFamily="sans-serif-light"
                android:text="Сегодня Пт, 16 апреля"
                android:textAlignment="center"
                android:textColor="@color/grey_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/home_circle_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:layout_anchorGravity="end|top"
                app:layout_constraintBottom_toBottomOf="@+id/home_top_date"
                app:layout_constraintEnd_toEndOf="@+id/home_top_date"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/home_circle_bar"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/circle_bar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:progress="100" />

            <TextView
                android:id="@+id/home_circle_bar_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/green"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="@+id/home_circle_bar"
                app:layout_constraintEnd_toEndOf="@+id/home_circle_bar"
                app:layout_constraintStart_toStartOf="@+id/home_circle_bar"
                app:layout_constraintTop_toTopOf="@+id/home_circle_bar"
                app:layout_constraintVertical_bias="0.4"
                tools:text="60" />

            <TextView
                android:id="@+id/home_circle_bar_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/green"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/home_circle_bar"
                app:layout_constraintEnd_toEndOf="@+id/home_circle_bar"
                app:layout_constraintStart_toStartOf="@+id/home_circle_bar"
                app:layout_constraintTop_toBottomOf="@+id/home_circle_bar_progress"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Всего 2100" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/breakfast"
            layout="@layout/eating_card"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/dinner"
            layout="@layout/eating_card"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/meal"
            layout="@layout/eating_card"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn"
            android:textColor="@color/white"
            android:layout_marginVertical="16dp"
            android:text="Добавить" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>